# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dms_v2_dev"

# Redis Configuration (for BullMQ queues)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Authentication Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="DMS v2"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Email Service Configuration (if using external email service)
EMAIL_FROM="noreply@dms-v2.local"
EMAIL_SERVICE_PROVIDER="console" # Options: console, ses, sendgrid, mailgun

# Push Notification Configuration
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""

# API Configuration
API_BASE_URL="http://localhost:3000/api"
NEXT_PUBLIC_API_BASE_URL="/api"

# Logging Configuration
LOG_LEVEL="info" # Options: error, warn, info, debug
ENABLE_REQUEST_LOGGING="true"

# Feature Flags
ENABLE_OFFLINE_MODE="true"
ENABLE_BACKGROUND_SYNC="true"
ENABLE_PUSH_NOTIFICATIONS="true"